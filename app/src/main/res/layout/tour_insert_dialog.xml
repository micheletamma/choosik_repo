<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inserisci Tour"
        android:textSize="20sp"
        android:textColor="@color/colorAccent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/input_tour_edit_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:text=""
        android:singleLine="true"
        android:hint="Scrivi il nome del tuo nuovo tour"
        android:textColorHint="@android:color/holo_green_dark"
        android:textAlignment="center"
        android:drawableEnd="@drawable/add_icon"
        android:drawableRight="@drawable/add_icon"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        android:id="@+id/input_tour_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Inserisci"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="84dp" />


</RelativeLayout>