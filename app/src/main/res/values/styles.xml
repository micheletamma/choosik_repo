<resources xmlns:android="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#FF5E6B71</item>
        <item name="colorPrimaryDark">#FF000000</item>
        <item name="colorAccent">#D5FF4040</item>
        <item name="homeAsUpIndicator">@drawable/home_48px</item>
        <item name="spinnerDropDownItemStyle">@style/SpinnerItem.DropDownItem</item>



    </style>




    <style name="AppTheme.NoActionBar">

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="AppTheme.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">#ffffff</item>

    </style>

    <style name ="txtSuNero">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:fontFamily">@string/font_family_thin</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:textColor">@android:color/white</item>
        <item name = "android:textColorHighlight">@android:color/white</item>
        <item name="android:textColorLink">@android:color/white</item>
    </style>
    <style name ="txtSuBianco">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:fontFamily">@string/font_family_thin</item>
        <item name="android:textColorHint">@android:color/black</item>
        <item name="android:textColor">@android:color/black</item>
        <item name = "android:textColorHighlight">@android:color/black</item>
        <item name="android:textColorLink">@android:color/black</item>
    </style>


    <style name="SpinnerItem">
        <item name="android:textColor">#00FF00</item>
    </style>

    <style name="SpinnerItem.DropDownItem">
        <item name="android:textColor">@android:color/black</item>
    </style>
</resources>
