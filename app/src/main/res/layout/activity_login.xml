<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/prova"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="sms1516.gruppo28.uniba.it.choosik.LoginActivity"
    >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <EditText
            android:id="@+id/txtUser"
            android:textCursorDrawable="@null"
            android:textColor="@android:color/white"
            android:theme="@style/txtSuNero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="false"
            android:layout_below="@+id/imageView2"
            android:hint="@string/usr"
            android:maxLines="1"
            android:singleLine="true"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal|top"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="false"
            android:layout_marginTop="100dp"
            android:fontFamily="@string/font_family_thin"
            />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/solo_scritta"
            android:layout_gravity="center_horizontal|top"
            android:layout_marginTop="10dp" />

        <Button
            android:id="@+id/registerbtn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/loginbtn"
            android:onClick="register"
            android:text="S I G N  U P"
            android:textColor="@android:color/tab_indicator_text"
            android:textStyle="bold"
            android:theme="@style/AppTheme.Button"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="15dp"
            android:background="@android:color/transparent"/>

        <Button
            android:id="@+id/loginbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/txtPassword"
            android:onClick="login"
            android:text="L o g i n"
            android:textColor="@android:color/tab_indicator_text"
            android:textStyle="bold"
            android:theme="@style/AppTheme.Button"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="70dp"
            android:layout_marginTop="0dp"

            android:background="@android:color/transparent" />
    </FrameLayout>


    <EditText
        android:id="@+id/txtPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:fontFamily="@string/font_family_thin"
        android:ems="10"
        android:includeFontPadding="true"
        android:hint="@string/psw"
        android:inputType="textPassword"
        android:text=""
        android:textAlignment="center"
        android:layout_gravity="right|center_vertical"
        android:layout_marginTop="140dp"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:textCursorDrawable="@null"
        android:singleLine="true"


        />


</RelativeLayout>
