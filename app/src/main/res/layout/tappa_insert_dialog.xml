<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical" android:layout_width="wrap_content"
android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inserisci Tappa"
        android:id="@+id/textView6"
        android:textSize="20sp"
        android:textColor="@color/colorAccent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/input_tappa_citta_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textAlignment="center"
        android:hint="Citta'"
        android:textIsSelectable="false"
        android:textSize="17sp"
        android:drawableEnd="@drawable/place"
        android:drawableRight="@drawable/place"
        android:layout_below="@+id/textView6"
        android:layout_centerHorizontal="true" />



    <TextView
        android:id="@+id/data_tappa_input_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:hint="Data"
        android:textSize="18sp"
        android:drawableEnd="@drawable/data"
        android:drawableRight="@drawable/data"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6"
        android:layout_below="@+id/input_tappa_citta_text" />

    <Button
        android:id="@+id/input_tappa_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Inserisci"
        android:layout_alignWithParentIfMissing="false"
        android:layout_below="@+id/data_tappa_input_view"
        android:layout_alignLeft="@+id/input_tappa_citta_text"
        android:layout_alignStart="@+id/input_tappa_citta_text"
        />


</RelativeLayout>