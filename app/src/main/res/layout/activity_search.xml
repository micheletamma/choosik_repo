<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="sms1516.gruppo28.uniba.it.choosik.SearchActivity"
    android:background="@drawable/prova"
    android:id="@+id/SearchActivityContainer"
    >


    <TextView android:id="@+id/dateDisplay"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="  Seleziona data"
        android:textSize="20sp"
            android:drawableEnd="@drawable/data"
            android:drawableRight="@drawable/data"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/txtViewLuogo"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:textColorHighlight="@android:color/white"
            android:textIsSelectable="true"
        android:layout_marginTop="10dp" />

    <AutoCompleteTextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/txtViewArtista"
        android:hint="Seleziona artista"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:textColorHighlight="@android:color/white"
        android:drawableEnd="@drawable/dj_48px"
        android:drawableRight="@drawable/dj_48px"
        android:layout_below="@+id/imageView12"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <AutoCompleteTextView
        android:layout_width="fill_parent"
        android:textSize="20sp"
        android:layout_height="wrap_content"
        android:id="@+id/txtViewLuogo"
        android:drawableEnd="@drawable/place"
        android:drawableRight="@drawable/place"
        android:layout_below="@+id/txtViewArtista"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Seleziona luogo"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:textColorHighlight="@android:color/white"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Cerca"
        android:id="@+id/btnCerca"
        android:theme="@style/AppTheme.Button"
        android:textStyle="bold"
        android:onClick="search"
        android:textColor="@android:color/tab_indicator_text"
        android:background="@android:color/transparent"
        android:drawableEnd="@drawable/search_48px"
        android:drawableRight="@drawable/search_48px"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="44dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView12"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/solo_scritta"/>


</RelativeLayout>
