<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/text_item"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:textSize="16sp"

        android:textStyle="bold"
        android:theme="@style/txtSuBianco" />
    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/text_media"
        android:textStyle="bold"
        android:theme="@style/txtSuBianco"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/text_item"
        android:textSize="16sp" />

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rating_tick"
        android:textStyle="bold"
        android:theme="@style/txtSuBianco"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_toRightOf="@+id/text_item"
        android:textSize="16sp"
        android:drawableRight="@drawable/icon_true"
        android:drawableEnd="@drawable/icon_true" />

    <RatingBar
        android:id="@+id/rating_bar"
        android:numStars="5"
        android:layout_below="@+id/text_media"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:stepSize="0.1"
        android:isIndicator="true"/>

</RelativeLayout>



